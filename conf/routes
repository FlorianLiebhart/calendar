# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                       controllers.Login.index
POST          /login                  controllers.Login.login
GET           /logout                 controllers.Login.logout

# Calendar
GET           /calendar               controllers.Calendar.calendar()
## Temporary!
GET           /events/list            controllers.Calendar.list(start: Option[String], end: Option[String])

# Appointment
GET           /appointment/:id        controllers.Appointments.show(id: Int)
GET           /appointment            controllers.Appointments.list
POST          /appointment            controllers.Appointments.add(description: String, start: String, end: String)
PUT           /appointment/:id        controllers.Appointments.update(id: Int)
DELETE        /appointment/:id        controllers.Appointments.delete(id: Int)

# Tag
GET           /tag/:id                controllers.Tags.show(id: Int)
GET           /tag                    controllers.Tags.list
POST          /tag                    controllers.Tags.add
PUT           /tag/:id                controllers.Tags.update(id: Int)
DELETE        /tag/:id                controllers.Tags.delete(id: Int)

# Database setup
GET           /createschema           controllers.Application.createSchema
GET           /createuser             controllers.Application.createUser
GET           /dropschema             controllers.Application.dropSchema

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file           controllers.Assets.at(path="/public", file)
